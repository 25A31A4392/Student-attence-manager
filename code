#include <stdio.h>
#include <stdlib.h>
#include <string.h>

struct Student {
    int roll;
    char name[50];
    char status; // P for Present, A for Absent
};

void addStudent() {
    FILE *fp = fopen("attendance.txt", "a");
    struct Student s;

    if (fp == NULL) {
        printf("File cannot be opened.\n");
        return;
    }

    printf("Enter Roll Number: ");
    scanf("%d", &s.roll);

    printf("Enter Name: ");
    scanf(" %[^\n]", s.name);

    printf("Enter Attendance (P/A): ");
    scanf(" %c", &s.status);

    fwrite(&s, sizeof(s), 1, fp);
    fclose(fp);

    printf("Student attendance added successfully!\n");
}

void viewAttendance() {
    FILE *fp = fopen("attendance.txt", "r");
    struct Student s;

    if (fp == NULL) {
        printf("No records found.\n");
        return;
    }

    printf("\n--- Attendance Records ---\n");
    printf("Roll\tName\t\tStatus\n");

    while (fread(&s, sizeof(s), 1, fp)) {
        printf("%d\t%-15s\t%c\n", s.roll, s.name, s.status);
    }

    fclose(fp);
}

int main() {
    int choice;

    while (1) {
        printf("\n===== Student Attendance Manager =====\n");
        printf("1. Add Student Attendance\n");
        printf("2. View Attendance\n");
        printf("3. Exit\n");
        printf("Enter your choice: ");
        scanf("%d", &choice);

        switch (choice) {
            case 1:
                addStudent();
                break;
            case 2:
                viewAttendance();
                break;
            case 3:
                exit(0);
            default:
                printf("Invalid choice. Try again.\n");
        }
    }

    return 0;
}
